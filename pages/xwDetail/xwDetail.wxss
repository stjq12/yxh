/* pages/xwDetail/xwDetail.wxss */
.titlePic{
  width: 100%;
}
.main{
  width: 94vw;
  margin: 0 auto;
}
.title{
  font-size: larger;
  margin-top: 2vw;
}
.rowAuthor{
  display: flex;
  margin-top: 3vw;
}
.rowAuthor>image{
  width: 10vw;
  height: 10vw;
  border-radius: 50%;
}
.column2{
  height: 10vw;
  display: flex;
  flex-direction: column;
  margin-left: 3vw;
  width: 65vw;
}
.column2>view{
  height: 5vw;
  line-height: 5vw;
}
.column2 :last-child{
  font-size: smaller;
  color: #888;
}
.attention{
  width: 15vw;
  height: 7vw;
  line-height: 7vw;
  text-align: center;
  margin-top: 2vw;
  background-color: orange;
  color: white;
  font-size: small;
  border-radius: 2vw;
}
.detail{
  margin-top: 3vw;
  color: #333;
  line-height: 7vw;
}
.main>image{
  width: 100%;
  margin-top: 3vw;
}
.operate{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 10vw;
  padding: 2vw 0vw 2vw 0vw;
  background-color: #fafafa;
  display: flex;
}
.operate>input{
  width: 70vw;
  height: 10vw;
  background-color: white;
  border-radius: 5vw;
  margin: 0 0vw 0 3vw;
}
.operate>image{
  width: 6.5vw;
  height: 6.5vw;
  margin-left: 4vw;
  margin-top: 2vw;
}