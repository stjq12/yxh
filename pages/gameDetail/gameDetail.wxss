/* pages/gameDetail/gameDetail.wxss */
.gameTitle{
  text-decoration: underline;
  text-align: center;
  font-size: large;
}
.myComRow3Title{
  display: flex;
  margin-left: 3vw;
  margin-top: 2vw;
}
.myComRow3Title>view{
  padding: 1vw 3vw 1vw 3vw;
  color: #555;
  font-size: small;
}
#row3Index{
  background-color: black;
  color: white;
}
.gamePic{
  width: 100%;
  margin-top: 3vw;
  margin-bottom: -2vw;
}
.mes1{
  display: flex;
  padding: 2vw;
  height: 10vw;
  width: 96vw;
  background-image: linear-gradient(to right , rgb(84, 94, 104), rgb(15, 16, 17));
}
.price{
  color: #fefefe;
  font-weight: bolder;
  font-size: xx-large;
  line-height: 10vw;
  height: 10vw;
}
.discount{
  margin-left: 5vw;
  display: flex;
  flex-direction: column;
}
.disRow1{
  color: #fefefe;
  font-size: small;
  line-height: 5vw;
}
.disRow2{
  display: flex;
}
.disRow2>view{
  color: #fefefe;
  font-size: small;
  line-height: 5vw;
}
.disRow2 :first-child{
  background-color: green;
  padding: 0 2vw 0 2vw;
  border-radius: 5%;
}
.disRow2 :nth-child(2){
  padding: 0 2vw 0 2vw;
  text-decoration: line-through;
}
.mes2{
  padding: 3vw;
  width: 94vw;
  display: flex;
}
.mes2Col1{
  display: flex;
  flex-direction: column;
  width: 84vw;
}
.mes2Col1 :first-child{
  font-size: larger;
}
.mes2Col1 :last-child{
  color: #888;
  font-size: small;
}
.mes2Col2{
  width: 10vw;
  text-align: center;
  background-color: orange;
  border-radius: 5%;
  color: white;
  line-height: 7vw;
  height: 7vw;
  margin-top: 2vw;
}
.mes3{
  display: flex;
  margin: 0 3vw 0 3vw;
  border-bottom: 1px solid #f2f2f2;
}
.mes3>view{
  margin: 0 2vw 3vw 0;
  padding: 0 2vw 0 2vw;
  background-color: #f2f2f2;
  border-radius: 5%;
  font-size: small;
}
.mes4{
  padding: 2vw;
  width: 96vw;
  display: flex;
}
.mes4>view{
  flex: 1;
  margin: 1vw;
  padding-top: 2vw;
  padding-bottom: 2vw;
  background-color: #f2f2f2;
  display: flex;
  flex-direction: column;
  border-radius: 5%;
}
.mes4>view :first-child{
  font-size: larger;
  font-weight: lighter;
  color: #333;
  text-align: center;
}
.mes4>view :last-child{
  font-size: small;
  color: #333;
  text-align: center;
  font-weight: lighter;
}
.mes5{
  /* margin-top: 2vw; */
  padding: 3vw;
}
.mes5Title{
  font-size: large;
  margin-bottom: 3vw;
}
.mes5Detail{
  /* font-weight: lighter; */
  color: #555;
}

.operate{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 96vw;
  height: 12vw;
  padding: 0 2vw 0 2vw;
  background-color: #fafafa;
  display: flex;
}
.operate>view{
  flex: 1;
  margin: 1vw;
  padding: 1vw 0 1vw 0;
  text-align: center;
  border: 1px solid rgba(100,100,100,0.2);
  line-height: 8vw;
  height: 8vw;
}
.operate :last-child{
  background-color: black;
  color: white;
}