/* pages/me/me.wxss */
.page{
  background-color: rgb(245,245,245);
  min-height:100vh;
  max-width:100vw;
  overflow: hidden;
}
.userBox{
  width: 90vw;
  height: 140rpx;
  padding: 5vw;
  position: relative;
}
.userinfoAvatar {
  float: left;
  overflow: hidden;
  width: 139rpx;
  height: 139rpx;
  border-radius: 50%;
  border: 1px solid rgba(200,200,200,0.3);
}
.userInfoMes{
  float: left;
  display: flex;
  flex-direction: column;
  vertical-align: top;
  margin-left: 30rpx;
}
.userName{
  height: 80rpx;
  line-height: 80rpx;
  font-size: large;
  text-decoration: underline;
}
.userSay{
  height: 60rpx;
  line-height: 60rpx;
  color: #888;
}
.editIcon{
  float: right;
  width: 40rpx;
  height: 40rpx;
  line-height: 140rpx;
}
.editIcon image{
  width: 100%;
  height: 100%;
}
.userRow2{
  position: relative;
  width: 94vw;
  margin: 0 auto;
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  background-color: white;
}
.userRow2>view{
  flex: 1;
}
.userRow2>view>view{
  text-align: center;
  color: #888;
}
.userRow2>view :first-child{
  font-weight: bolder;
}
.userRow2>view :last-child{
  font-size: small;
}

.userRow3{
  position: relative;
  background-color: white;
  width: 94vw;
  margin: 0 auto;
  border-radius: 20rpx;
  overflow: hidden;
}
.row3Box{
  width: 100%;
  height: 40rpx;
  padding: 30rpx;
  border-bottom: 1px solid rgba(150,150,150,0.1);
}
.row3Box image{
  float: left;
  width: 40rpx;
  height: 40rpx;
}
.row3Box view{
  float: left;
  line-height: 40rpx;
  margin-left: 20rpx;
  color: #707070;
}