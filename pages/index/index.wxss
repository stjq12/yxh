/**index.wxss**/
.slideshow{
  width: 100%;
  height: 360rpx;
}
.slideshow image{
  width: 100%;
  height: 100%;
}
.xwBox{
  width: 100vw;
  height: 160rpx;
  padding: 3vw 0 3vw 0;
  border-bottom: 1px solid rgba(100,100,100,0.1);
}
.xwMes{
  width: 60vw;
  padding: 0 3vw 0 3vw;
  display: flex;
  flex-direction: column;
  float: left;
  overflow-wrap: break-word;
}
.xwMesTitle{
  display: -webkit-box;
  white-space: pre-line;
  -webkit-line-clamp: 2; /*最大行数*/
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.row2{
  display: flex;
}
.xwMesType{
  margin-top: 20rpx;
  color: #8a8a8a;
  font-size: small;
  width: 48vw;
}
.xwComType{
  margin-top: 20rpx;
  color: #8a8a8a;
  font-size: small;
}
.row2>image{
  width: 4vw;
  height: 4vw;
  margin-top: 25rpx;
}

.xwPic{
  float: left;
  width: 31vw;
  height: 100%;
  padding-right: 3vw;
}
.xwPic image{
  width: 100%;
  height: 100%;
}

.mesBox{
  width: 100vw;
  border-bottom: 6px solid rgba(100,100,100,0.1);
}
.userRow{
  width: 100vw;
  padding: 3vw 0 3vw 0;
  display: flex;
}
.userPic{
  width: 10vw;
  height: 10vw;
  margin: 1vw 4vw 1vw 4vw;
  border-radius: 50%;
  overflow: hidden;
  background-color: red;
}
.userName{
  width: 70vw;
  height: 12vw;
  line-height: 12vw;
}
.more{
  margin: 3vw;
  width: 6vw;
  height: 6vw;
}
.more image{
  width: 100%;
  height: 100%;
}
.detail{
  color: #333;
  display: -webkit-box;
  white-space: pre-line;
  padding: 0vw 4vw 0vw 4vw;
  -webkit-line-clamp: 10; /*最大行数*/
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.mesPic{
  padding: 0 4vw 0 0;
  display: flex;
  margin-top: 5vw;
}
.mesPic image{
  flex: 1;
  margin-left: 4vw;
  width: 28vw;
  height: 28vw;
  background-color: red;
  border-radius: 5%;
}
.operation{
  display: flex;
  width: 100vw;
  margin: 5vw 0 5vw 0;
}
.operationFlex{
  flex:1;
  height: 5vw;
  align-items: center;
  text-align: center;
}
.operationFlex>view{
  height: 5vw;
  max-height: 5vw;
  overflow: hidden;
  margin: 0 auto;
}
.operationFlex>view>image{
  height: 100%;
  display: inline-block;
}
.operationFlex>view>view{
  display: inline-block;
  height: 5vw;
  line-height: 5vw;
  margin-left: 2vw;
  vertical-align: top;
}