/* pages/yxLib/yxLib.wxss */
.recommendTitle{
  padding: 3vw;
}
.recommendTitle>view{
  display: inline-block;
  vertical-align: top;
}
.recommendTitle :first-child{
  width: 82vw;
}
.recommendTitle :last-child{
  width: 12vw;
  color: #888;
}

.row1 {
  position: relative;
  z-index: 2;
  width: 94vw;
  margin: 0 auto;
  display: flex;
  padding-bottom: 20rpx;
}

.row1>view {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.row1 image {
  margin: 0 auto;
  width: 8vw;
  height: 8vw;
}

.row1>view>view {
  text-align: center;
  color: #888;
  font-size: small;
}
.gameList{
  width: 97vw;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
}
.gameBox{
  flex: 1;
  max-width: 45.5vw;
  min-width: 45.5vw;
  width: 45.5vw;
  padding: 1.5vw;
}
.gameBox>image{
  width: 100%;
  height: 25vw;
  background-color: red;
  border-radius: 10rpx;
  overflow: hidden;
}
.type{
  display: flex;
  margin-top: 1.5vw;
}
.type>view{
  font-size: x-small;
  color: #888;
  border: 1px solid #888;
  padding: 0 1vw 0 1vw;
  margin-right: 2vw;
}
.name{
  height: 5vw;
  line-height: 5vw;
}
.price{
  font-weight: bold;
  font-size: small;
  line-height: 6vw;
  height: 6vw;
  background-color: #f2f2f2;
  padding: 0 2vw 0 2vw;
}
.gameBox :nth-child(4){
  display: flex;
  margin-top: 2vw;
}
.discount{
  background-color: green;
  font-size: xx-small;
  color: white;
  padding: 0 2vw 0 2vw;
  /* margin-left: 2vw; */
  line-height: 6vw;
  height: 6vw;
}
.myComRow3Title>view{
  display: inline-block;
  vertical-align: center;
  padding: 1vw;
  margin-left: 2vw;
  color: #888;
}
#row3Index{
  text-decoration: underline;
  color: black;
}
.gameBox2{
  width: 94vw;
  margin: 0 auto;
  display: flex;
  margin-top: 3vw;
}
.gameBox2>image{
  width: 36.4vw;
  height: 20vw;
  background-color: red;
  border-radius: 5%;
  overflow: hidden;
}
.gameMes2{
  margin-left: 3vw;
  width: 47.6vw;
}
.title{
  line-height: 10vw;
  height: 10vw;
}
.gameBox2 :nth-child(2) :nth-child(2){
  display: flex;
}
.score{
  width: 7vw;
  text-align: center;
  padding: 0 1vw 0 1vw;
  margin-top: 10vw;
  line-height: 6vw;
  height: 6vw;
  background-color: orange;
  color: white;
  font-weight: bold;
  border-radius: 5%;
}